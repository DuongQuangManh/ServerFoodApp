<style>
  .contai {
    width: 100%;
    height: auto;

    display: flex;
  }
  .avt {
    width: 30%;
    height: auto;

    padding: 20px;
  }
  .conten {
    width: 70%;
    height: auto;
  }
  .labelte {
    font-size: 20px;
    font-weight: bold;
    padding: 10px;
  }
  .text {
    font-size: 23px;
    font-weight: 500;
    padding: 10px;
  }
</style>
<div class="container">
  <i class="fas fa-chevron-left" style="font-size: 28px" onclick="onBack()"></i>
  <div class="contai">
    <div class="avt">
      <img src="<%= obj.img  %>" style="width: 100%; height: 400px" />
    </div>
    <div class="conten">
      <table>
        <tr>
          <td class="labelte">Name</td>
          <td class="text"><%= obj.name %></td>
        </tr>
        <tr>
          <td class="labelte">Category</td>
          <td class="text"><%= obj.id_theloai.name %></td>
        </tr>
        <tr>
          <td class="labelte">Price</td>
          <td class="text"><%= obj.price %></td>
        </tr>
        <tr>
          <td class="labelte">Description</td>
          <td class="text"><%= obj.description %></td>
        </tr>
      </table>
    </div>
  </div>
  <script>
    function onBack() {
      window.history.back(-2);
    }
  </script>
</div>
