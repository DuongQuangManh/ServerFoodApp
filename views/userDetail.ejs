<style>
  .contai {
    width: 100%;
    height: auto;

    display: flex;
  }
  .avt {
    width: 30%;
    height: auto;

    padding: 20px;
  }
  .conten {
    width: 70%;
    height: auto;
  
  }
  .labelte {
    font-size: 20px;
    font-weight: bold;
    padding: 10px;
  }
  .text {
    font-size: 23px;
    font-weight: 500;
    padding: 10px;
  }
</style>
<div class="container">
  <i class="fas fa-chevron-left" style="font-size: 28px" onclick="onBack()"></i>
  <div class="contai">
    <div class="avt">
      <image src="https://imgv3.fotor.com/images/blog-cover-image/part-blurry-image.jpg" style="width: 100%; height: 400px" />
    </div>
    <div class="conten">
      <table>
        <tr>
          <td class="labelte">Fullname</td>
          <td class="text"><%= obj.firstname %> <%= obj.lastname %></td>
        </tr>
        <tr>
          <td class="labelte">Email</td>
          <td class="text"><%= obj.email %></td>
        </tr>
        <tr>
          <td class="labelte">Account creation date</td>
          <td class="text"><%= moment(obj.createdAt).format('DD/MM/YYYY, HH:mm') %></td>
        </tr>
        <tr>
          <td class="labelte">Position</td>
          <td class="text"><%= obj.position?'Admin':'Client' %></td>
        </tr>
        <tr>
          <td class="labelte">Status</td>
          <td class="text"><%= obj.status?'Active':'Inactive' %></td>
        </tr>
      </table>
    </div>
  </div>
  <script>
    function onBack() {
      window.history.back();
    }
  </script>
</div>
